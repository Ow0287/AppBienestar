<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.misena.oscar.appbienestar.Mision">
<TextView
    android:id="@+id/txv_mision"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/txt_mision"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="50dp"
    android:textSize="@dimen/tamano"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/mision"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="120dp"/>
    <TextView
        android:id="@+id/texto_mision"
        android:layout_width="290dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="@string/texto_mision"
        android:textSize="@dimen/tamano"/>
</RelativeLayout>
